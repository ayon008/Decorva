generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  ADMIN
  SHOP_MANAGER
}

enum ProductStatus {
  DRAFT
  PUBLISH
  PRIVATE
}

enum ProductVisibility {
  VISIBLE
  CATALOG
  SEARCH
  HIDDEN
}

enum ProductType {
  SIMPLE
  VARIABLE
}

enum StockStatus {
  INSTOCK
  OUTOFSTOCK
  ONBACKORDER
}

enum OrderStatus {
  PENDING
  PROCESSING
  ON_HOLD
  COMPLETED
  CANCELLED
  REFUNDED
  FAILED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
  PARTIALLY_REFUNDED
}

enum PaymentMethod {
  CASH_ON_DELIVERY
  CREDIT_CARD
  DEBIT_CARD
  PAYPAL
  STRIPE
  BANK_TRANSFER
  OTHER
}

model User {
  id                String           @id @default(auto()) @map("_id") @db.ObjectId
  email             String           @unique
  password          String?
  firstName         String?
  lastName          String?
  phone             String?
  company           String?
  taxId             String?
  customerNotes     String?
  isActive          Boolean?         @default(true)
  emailVerified     Boolean?         @default(false)
  roles             UserRole[]       @default([CUSTOMER])
  billingAddress    BillingAddress?  @relation(fields: [billingAddressId], references: [id])
  billingAddressId  String?          @unique @db.ObjectId
  shippingAddress   ShippingAddress? @relation(fields: [shippingAddressId], references: [id])
  shippingAddressId String?          @unique @db.ObjectId

  wishlist WishlistItem[]
  orders   Order[]
  reviews  ProductReview[]

  // Marketing
  marketingOptIn Boolean? @default(false)

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLogin     DateTime?
  lastOrderDate DateTime?
  cart          Cart?

  @@index([roles])
}

model BillingAddress {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName String?
  lastName  String?
  company   String?
  address1  String
  address2  String?
  city      String
  state     String
  postcode  String
  country   String
  phone     String?
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?
}

model ShippingAddress {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName String?
  lastName  String?
  company   String?
  address1  String
  address2  String?
  city      String
  state     String
  postcode  String
  country   String
  phone     String?
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?
}

model WishlistItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String   @db.ObjectId
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  productId String   @db.ObjectId
  price     Float
  image     String
  name      String
  quantity  Int      @default(1)
  addedAt   DateTime @default(now())
  cart      Cart?    @relation(fields: [cartId], references: [id])
  cartId    String?  @db.ObjectId

  @@index([cartId])
  @@index([productId])
}

model Cart {
  id     String     @id @default(auto()) @map("_id") @db.ObjectId
  user   User       @relation(fields: [userId], references: [id])
  userId String     @unique @db.ObjectId
  items  CartItem[]
}

model Order {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  user        User          @relation(fields: [userId], references: [id])
  userId      String        @db.ObjectId
  orderNumber String        @unique
  
  // Order Status
  status      OrderStatus  @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  paymentMethod PaymentMethod?
  
  // Billing Information (embedded)
  billingFirstName String
  billingLastName  String
  billingEmail     String
  billingPhone     String?
  billingCompany   String?
  billingAddress1  String
  billingAddress2  String?
  billingCity      String
  billingState     String
  billingPostcode  String
  billingCountry   String
  
  // Shipping Information (embedded)
  shippingFirstName String?
  shippingLastName  String?
  shippingEmail     String?
  shippingPhone     String?
  shippingCompany   String?
  shippingAddress1  String?
  shippingAddress2  String?
  shippingCity      String?
  shippingState      String?
  shippingPostcode   String?
  shippingCountry    String?
  
  // Order Items
  items        OrderItem[]
  
  // Pricing Breakdown
  subtotal     Float       // Sum of all items before taxes and shipping
  taxAmount    Float       @default(0)
  shippingCost Float       @default(0)
  discountAmount Float     @default(0)
  total        Float       // Final total (subtotal + tax + shipping - discount)
  
  // Additional Information
  orderNotes   String?     // Customer notes
  adminNotes   String?     // Internal admin notes
  customerIp   String?     // IP address for fraud detection
  
  // Payment Information
  transactionId String?    // Payment gateway transaction ID
  paidAt        DateTime?  // When payment was received
  
  // Shipping Information
  trackingNumber String?
  shippedAt      DateTime?
  deliveredAt    DateTime?
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([paymentStatus])
  @@index([createdAt])
}

model OrderItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId     String   @db.ObjectId
  
  // Product Information (snapshot at time of order)
  productId   String   @db.ObjectId
  productName String   // Snapshot of product name
  productSku  String?  // Snapshot of SKU
  
  // Variation Information (if applicable)
  variationId String?  @db.ObjectId
  variationAttributes String? // JSON string of selected attributes
  
  // Pricing (snapshot at time of order)
  price       Float    // Unit price at time of order
  quantity    Int      @default(1)
  subtotal    Float    // price * quantity
  
  // Product Image (snapshot)
  imageUrl    String?
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([orderId])
  @@index([productId])
}

model ProductReview {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  productId String   @db.ObjectId
  rating    Int
  review    String?
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])

  @@index([userId])
  @@index([productId])
}

model Product {
  id                   String            @id @default(auto()) @map("_id") @db.ObjectId
  name                 String
  slug                 String            @unique
  descriptionHtml      String // main content
  descriptionText      String? // optional (search, preview)
  shortDescriptionHtml String?
  shortDescriptionText String?
  sku                  String?           @unique
  status               ProductStatus     @default(PUBLISH)
  visibility           ProductVisibility @default(VISIBLE)
  featured             Boolean           @default(false)
  productType          ProductType       @default(SIMPLE)

  // Pricing
  price        Float?
  regularPrice Float?
  salePrice    Float?
  saleStart    DateTime?
  saleEnd      DateTime?

  // Stock
  stockStatus   StockStatus @default(INSTOCK)
  manageStock   Boolean     @default(false)
  stockQuantity Int?

  // Dimensions
  weight Float?
  length Float?
  width  Float?
  height Float?

  // Product flags
  virtual      Boolean @default(false)
  downloadable Boolean @default(false)

  // Parent product for variations
  parentId String?  @db.ObjectId
  parent   Product? @relation("ParentProduct", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  // Relations
  variations  ProductVariation[] @relation("ParentProduct")
  images      ProductImage[]
  attributes  ProductAttribute[]
  categories  ProductCategory[]  @relation(fields: [categoryIds], references: [id])
  categoryIds String[]           @db.ObjectId
  tags        ProductTag[]       @relation(fields: [tagIds], references: [id])
  tagIds      String[]           @db.ObjectId

  // Timestamps
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  products        Product[]      @relation("ParentProduct")
  shippingClass   ShippingClass? @relation(fields: [shippingClassId], references: [id])
  shippingClassId String?        @db.ObjectId
  productBrand    ProductBrand?  @relation(fields: [productBrandId], references: [id])
  productBrandId  String?        @db.ObjectId

  //
  enabledReviews Boolean         @default(false)
  purchaseNote   String?
  reviews        ProductReview[]
  wishlistItems  WishlistItem[]

  // Cross-sell and upsell
  crossSellIds String[] @db.ObjectId
  upsellIds    String[] @db.ObjectId

  @@index([status])
  @@index([productType])
  @@index([featured])
  @@index([parentId])
  @@index([categoryIds])
  @@index([tagIds])
  @@index([shippingClassId])
}

model ProductVariation {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  productId String  @db.ObjectId
  product   Product @relation("ParentProduct", fields: [productId], references: [id], onDelete: Cascade)

  // Variation specific fields
  sku           String?
  price         Float?
  regularPrice  Float?
  salePrice     Float?
  stockStatus   StockStatus @default(INSTOCK)
  manageStock   Boolean     @default(false)
  stockQuantity Int?
  weight        Float?
  length        Float?
  width         Float?
  height        Float?
  imageId       String?     @db.ObjectId

  // Attribute combinations for this variation
  attributes VariationAttribute[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
  @@index([sku])
}

model VariationAttribute {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  variationId String           @db.ObjectId
  variation   ProductVariation @relation(fields: [variationId], references: [id], onDelete: Cascade)

  attributeId String? @db.ObjectId
  name        String
  value       String // slug only ("red")

  @@index([variationId])
}

model ProductAttribute {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  attributeId String?  @db.ObjectId // ðŸ”¥ link to global attribute (optional)
  name        String
  values      String[] // store SLUGS, not labels

  visible   Boolean @default(true)
  variation Boolean @default(false)
  position  Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductImage {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  alt       String?
  position  Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

model ProductCategory {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String            @unique
  description String?           @default("")
  parentId    String?           @db.ObjectId
  parent      ProductCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children    ProductCategory[] @relation("CategoryHierarchy")
  imageUrl    String?
  count       Int               @default(0)

  products   Product[] @relation(fields: [productIds], references: [id])
  productIds String[]  @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([parentId])
}

model ProductTag {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String  @unique
  description String?
  count       Int     @default(0)

  products   Product[] @relation(fields: [productIds], references: [id])
  productIds String[]  @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ShippingClass {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String
  description String?
  count       Int       @default(0)
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ProductBrand {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String
  description String?
  logoUrl     String?
  websiteUrl  String?
  count       Int       @default(0)
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
}

model ContactMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  phone     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
